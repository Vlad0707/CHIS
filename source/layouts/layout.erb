<!doctype html>

<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title %></title>

    <%= stylesheet_link_tag "bootstrap.min", "style" %>
    <link rel="shortcut icon" href="/images/logos/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/logos/favicon.ico" type="image/x-icon">
  </head>

  <body class="<%= page_classes %>">
    
    <header>
      <nav class="navbar navbar-default navbar-fixed-top clearfix">
        <div class="container-fluid">
          <!-- NAVBAR - BRAND -->
          <div class="navbar-header gold">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="http://www.CHISconstruction.com">CALIFORNIA HOME IMPROVEMENT SOLUTIONS</a>
            <a class="navbar-brand-media" href="/">CHIS</a>
        </div>

          <!-- NAVBAR -->
          <div class="collapse navbar-collapse gold" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">SERVICES<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="/bathroom_remodeling.html">BATHROOM REMODELING in the Bay Area</a></li>
                  <li><a href="/kitchen_remodeling.html">KITCHEN REMODELING in the Bay Area</a></li>
                  <li><a href="/decks_patios.html">DECK and PATIO REPAIR in the Bay Area</a></li>
                  <!-- <li><a href="#">TILE in the Bay Area</a></li> -->
                </ul>
              </li>
             <!-- <li><a href="/gallery.html">GALLERY</a></li> -->
              <li><a href="/testimonials.html">TESTIMONIALS</a></li>
              <li><a href="/contact_us.html">CONTACT US</a></li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>

      <!-- CAROUSEL -->
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="2500">

        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-example-generic" data-slide-to="1"></li>
          <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

      <!-- WRAPPER FOR SLIDES -->
        <div class="carousel-inner" role="listbox">
          
          <div class="item active">
            <img src="images/header/header_kitchen_remodeling_225x300_tiny.jpg" alt="Quality Remodeled Kitchen" width="300px" height="225px">
            <div class="carousel-caption">
              Kitchen Remodeling
            </div>
          </div>

          <div class="item">
            <img src="images/header/header_bathroom_bathtub_yellow_225x300_tiny.jpg" alt="Quality Bathroom Remodeling" width="300px" height="225px">
            <div class="carousel-caption">
              Bathroom Remodeling
            </div>
          </div>

          <div class="item">
            <img src="images/header/header_deck_tice_valley_225x300_tiny.jpg" alt="Quality Deck and Patio Remodeling" width="300px" height="225px">
            <div class="carousel-caption">
              Deck and Patio Remodeling
            </div>
          </div>
        </div>
      </div>

    </header>

    <!-- <main> -->
    <%= yield %>


    <footer>
        <div class="cred">

          <a href="http://www.bbb.org/greater-san-francisco/business-reviews/contractors-general/california-home-improvement-solutions-in-san-francisco-ca-62529" target="_blank">
